
@model Final.Models.Persona

<div class="center-align">
    <br />
    <table>
        <thead>
            <tr>
                <th>Id. Usuario</th>
                <th>  Estado del pedido</th>
                <th> Comentario al envio</th>
                <th>Latitud</th>
                <th>Longitud</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@ViewBag.idUsuario</td>
                <td>@ViewBag.Estado</td>
                <td>@ViewBag.Comentario</td>
                @for (int i = 0; i < ViewBag.lenght; i++)
                {
                    <td>@ViewBag.data[i][1]</td>
                    <td> @ViewBag.data[i][2]</td>
                }

            </tr>
        </tbody>
    </table>

</div>
<br />

