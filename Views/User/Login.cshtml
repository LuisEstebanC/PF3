@model ErrorViewModel
@{
    Layout = null;

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="https://kit.fontawesome.com/4e8ef6cefa.js" crossorigin="anonymous"></script>
    <link href="~/css/materialize.css" type="text/css" rel="stylesheet" media="screen,projection" />
    <link href="~/css/materialize.min.css" type="text/css" rel="stylesheet" />
    <link href="~/css/style.css" type="text/css" rel="stylesheet" media="screen,projection" />
    <link href="~/css/Cards.css" type="text/css" rel="stylesheet" />
    <link href="~/css/cardCategorias.css" type="text/css" rel="stylesheet" />
    <link href="~/css/EstilosP.css" type="text/css" rel="stylesheet" />
    <link href="~/css/LoginYMas.css" type="text/css" rel="stylesheet" />
</head>
<body id="bodyLogin">
    <dv class="Lcontainer">
        <div class="container">
            <div class="row">
              
                <form id="primerCC"class="col s6" method="POST" enctype="multipart/form-data">
                   
                    <div class="cardL">
                        <div class="row">
                            <div class="col s12 m12 l12">
                                <a id="logo-containerL" class="brand-logo teal-text" style="font-size: 30px" asp-area="" asp-controller="Home" asp-action="index">CODEX<i class="large material-icons teal-text" style="font-size: 30px">developer_mode</i></a>
                            </div>
                        </div>
                      
                        <div class="row">
                            <div class="col s12 m12 l12">
                                <h1 class="mt-5"><strong>Iniciar Sesion</strong></h1>
                            </div>

                        </div>

                        @if (ErrorViewModel.ErrorLogin == true)
                        {
                            <span><strong>Usuario o Contraseña Incorrectos</strong></span>
                        }
                        <div class="row">
                            <h6><label class="etiquetas"><strong>Correo</strong></label></h6>
                            <input type="email" class="w3-input" id="" placeholder="Ingresa Correo" name="Correo_User" required>
                        </div>

                        <div class="row">
                            <h6><label class="etiquetas"><strong>Contraseña</strong></label></h6>
                            <input type="password" class="w3-input" id="" placeholder="Ingresa Contraseña" name="Password_User" required>
                        </div>

                        <div id="botones" class="row">
                            <button id="btnEntrar" class="btn btn-dark" type="submit">Entrar</button>
                            <a asp-controller="User" asp-action="Registrar" class="btn btn-dark">Registrarme</a>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </dv>

   
    <script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script src="~/js/init.js"></script>
    <script src="~/js/materialize.js" asp-append-version="true"></script>
   
</body>
</html>





